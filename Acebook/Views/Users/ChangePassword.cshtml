@model acebook.Models.ChangePasswordModelView

<form class="login-form" asp-action="ChangePassword" asp-route-username="@Model.Username" method="post">
    <fieldset>
        <legend>Change Password</legend>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="OldPassword" class="control-label">Old Pasword</label>
            <input asp-for="OldPassword" type="password" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">New Password</label>
            <input asp-for="NewPassword" type="password" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Update Password" class="btn btn-primary" />
        </div>
    </fieldset>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}